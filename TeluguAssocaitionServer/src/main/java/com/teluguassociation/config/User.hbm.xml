<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.customerportal.bean.User" table="crmuser">
  <id name="username">
   <column name="userName"  />
  </id>
  <property name="password" column="password"  />
  <property name="id" column="id"  />	
   <property name="firstName" column="firstName"  />	
  <property name="lastName" column="lastName"  />
  <property name="emailAddress" column="emailAddress"  />
  <property name="newlyCreated" column="newlyCreated" />
  <property name="admin" column="isAdmin" />
  <property name="permission" column="permission"  />
  <property name="imageContent" column="imageContent" />
  <property name="lastLoginTime" column="lastLoginTime" />
<property name="golarsEmployee" column="isGolarsEmployee" />
 <property name="userManager" column="isUserManager" />
 </class>
</hibernate-mapping>