<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="com.schoolapp.bean.Alerts" table="notifications">
  <id name="id">
   <column name="id"  />
  </id>
  <property name="categories" column="categories" />
  <property name="notificationtitle" column="notificationtitle" />
  <property name="notification" column="notification" />
  <property name="createdBy" column="createdBy" />	
  <property name="createdOn" column="createdOn" />
 </class>
</hibernate-mapping>